[module/xkeyboard]
type = internal/xkeyboard
;blacklist-0 = num lock
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}
label-layout = "%layout%"
label-indicator-on = " %name%"
label-indicator-off =
label-layout-underline = ${colors.primary}
label-indicator-on-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}
format-spacing = 0
format = <label-layout><label-indicator>

[module/date]
type = internal/date
interval = 1
date-alt = "%A, %Y-%m-%d"
time-alt = " %H:%M:%S"
time = "%H:%M:%S"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = "%date%%time%"


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
format-volume = <label-volume>
label-volume = üîä %percentage%%
label-muted = ÔÄ¶
format-muted-underline = ${colors.underline}
format-volume-underline = ${colors.primary}
format-muted-padding = 1

[module/backlight]
type = custom/script
exec = light | grep -Po "\d+\." | sed 's|\.|%|g'
label = üí° %output%
interval = 1
click-left = light -S 100
click-right = light -S 0
scroll-up = light -A 10
scroll-down = light -U 10
format-underline = ${colors.primary}


[module/previous]
type = custom/script
interval = 100
format = "%{T3}<label>"
format-padding = 0
; Previous song icon
exec = echo "‚è™"
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = ${colors.primary}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
type = custom/script
interval = 100
format = "%{T3}<label>"
format-padding = 0
; Next song icon
exec = echo "‚è≠Ô∏è"
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = ${colors.primary}
line-size = 0
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/playpause]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "‚è∏"
; Paused
hook-2 = echo "‚ñ∂Ô∏è"
initial = 1
format-underline = ${colors.primary}
line-size = 0
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

[module/spotify]
type = custom/ipc
hook-0 = echo ""
hook-1 = python3 ~/dotfiles/polybar/spotify/spotify_status.py -f "{artist} - {song}"
initial = 2
format-padding = 0
format-underline = ${colors.primary}
line-size = 0
; [i3wm only] - Uncomment the below line to focus on Spotify when clicking on the song name (credits to https://github.com/Esya)
click-left = i3-msg '[class="Spotify"] focus'



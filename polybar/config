menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = termite -e 'sudo reboot'
menu-2-0 = power off
menu-2-0-exec = termite -e 'sudo poweroff'
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
